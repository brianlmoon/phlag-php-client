{
    "name": "moonspot/phlag-client",
    "description": "Client library for reading feature flags from the Phlag application",
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Brian Moon",
            "email": "brian@moonspot.net"
        }
    ],
    "config": {
        "prepend-autoloader": false,
        "optimize-autoloader": true,
        "discard-changes": true
    },
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.10"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpunit/phpunit": "^11",
        "friendsofphp/php-cs-fixer": "^3.92"
    },
    "autoload": {
        "psr-4": {
            "Moonspot\\PhlagClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Moonspot\\PhlagClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "parallel-lint src/ tests/"
        ],
        "unit": [
            "phpunit"
        ],
        "test": [
            "@lint",
            "@unit"
        ],
        "fix": [
            "php-cs-fixer fix --config .php-cs-fixer.dist.php src tests"
        ]
    }
}
